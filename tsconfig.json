{
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		],
		"esm": true,
		"transpileOnly": true,
		"experimentalSpecifierResolution": "node"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"rootDir": "./",
		"outDir": "./dist/",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": [
			"node_modules/@types",
			"src/@types"
		],
		"sourceMap": false,
		"baseUrl": "./",
		"paths": {
			"@/root": [
				"src/index.js"
			],
			"@/client": [
				"src/client"
			],
			"@/interface": [
				"src/interfaces/index.js"
			],
			"@/interface/*": [
				"src/interfaces/*"
			],
			"@/localization": [
				"src/localization/index.js"
			],
			"@/discord_ext": [
				"src/discord_ext.js"
			],
			"@/utils": [
				"src/utils.js"
			],
			"@/cron/*": [
				"src/cron/*"
			],
			"@/duration": [
				"src/duration.js"
			],
			"@/buffer/*": [
				"src/buffer/*"
			],
			"@/buffer": [
				"src/buffer/index.js"
			],
			"@/commands/*": [
				"src/commands/*"
			],
			"@/commands": [
				"src/commands/index.js"
			],
			"@/cron": [
				"src/cron/index.js"
			]
		}
	},
	"files": [
		"src/index.ts",
		"src/@types/parse-duration.d.ts"
	],
	"include": [
		"./**/*.ts",
		"./**/*.json",
		"./**/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}