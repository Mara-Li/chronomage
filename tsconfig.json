{
	"ts-node": {
		"require": ["tsconfig-paths/register"],
		"esm": true,
		"transpileOnly": true,
		"experimentalSpecifierResolution": "node"
	},
	"tsc-alias": {
		"resolveFullPaths": true
	},
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "./",
		"outDir": "./dist/",
		"strict": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"typeRoots": ["node_modules/@types", "src/@types"],
		"sourceMap": false,
		"baseUrl": "./",
		"paths": {
			"@/root": ["src/index"],
			"@/client": ["src/client"],
			"@/interface": ["src/interface"],
			"@/localization": ["src/localization/index"],
			"@/discord_ext": ["src/discord_ext"],
			"@/utils": ["src/utils"],
			"@/cron/*": ["src/cron/*"],
			"@/duration": ["src/duration"],
			"@/buffer/*": ["src/buffer/*"],
			"@/buffer": ["src/buffer/index"],
			"@/commands/*": ["src/commands/*"],
			"@/commands": ["src/commands/index"],
			"@/cron": ["src/cron/index"]
		}
	},
	"files": ["src/index.ts", "src/@types/parse-duration.d.ts"],
	"include": ["./**/*.ts", "./**/*.json", "./**/*.d.ts"],
	"exclude": ["node_modules", "dist"]
}
